<html>
  <head>
    <link rel="stylesheet" href="/styles.css" />
    <script>
      function validateForm(event) {
        event.preventDefault();

        const messageText = document.getElementById("text").value.trim();
        const messageUser = document.getElementById("user").value.trim();

        if (!messageText) {
          alert("Message cannot be empty!");
          return;
        }

        if (!messageUser) {
          alert("Please enter your name!");
          return;
        }
        // If validation passes, submit the form
        document.getElementById("newMessageForm").submit();
      }
    </script>
  </head>
  <body>
    <form
      id="newMessageForm"
      method="post"
      action="/new"
      onsubmit="validateForm(event)"
    >
      <h3>Send your message to the world!</h3>
      <div class="inputContainer">
        <textarea
          rows="5"
          type="text"
          id="text"
          name="messageText"
          placeholder="Type your message.."
          class="messageBox"
        ></textarea>

        <input
          style="display: block; width: 183px"
          type="text"
          id="user"
          name="messageUser"
          placeholder="Type your name.."
        />
        <button
          style="display: flex; justify-self: flex-end; margin-top: 8px"
          type="submit"
        >
          Send
        </button>
      </div>
    </form>
  </body>
</html>
